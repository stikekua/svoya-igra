<UserControl x:Class="SvoyaIgra.MultimediaViewer.View.EditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SvoyaIgra.MultimediaViewer.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding Source={StaticResource Locator}, Path=EditorViewModel}"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Editor"
                Foreground="White"
                FontSize="20"
                HorizontalAlignment="Left"
                Margin="0,0,0,20"
            />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0"
                        Content="Create"
                        Command="{Binding CreateMultimediaCommand}"
                        Padding="20,10"
                        Margin="0,0,0,10"/>
                <ListView Grid.Row="1"
                          FontSize="16"
                        ItemsSource="{Binding Multimedias}"
                        SelectedItem="{Binding Selected_multimedia}"/>

                <StackPanel Grid.Row="3" 
                            Orientation="Horizontal"
                            Margin="0,10,0,0">
                    <Button Content="Open folder"
                        Command="{Binding OpenFolderCommand}"
                        Margin="0"
                        Padding="20,10"/>

                    <Button Content="Copy Id to clipboard"
                        Command="{Binding CopyToClipboardCommand}"
                        Margin="10,0,0,0"
                        Padding="20,10"/>
                </StackPanel>
                
            </Grid>
            
        </Grid>


