<Window x:Class="SvoyaIgra.Game.Views.Questions.QuestionsSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:SvoyaIgra.Game.Views.Questions"
        mc:Ignorable="d"
        Title="QuestionsSetupWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="Get Test Questions" Command="{Binding GetTestQuestionsCommand}"
                            Width="150" Height="50"/>
            <Button Content="Get Real Questions" Command="{Binding GetRealQuestionsFromDbCommand}"
                            Width="150" Height="50"/>


            
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <StackPanel  Orientation="Horizontal" >
                    <StackPanel>
                        <Label Content="Select round"/>
                        <ComboBox Text="Round" SelectedIndex="{Binding CurrentRoundIndex}">
                            <ComboBoxItem IsSelected="True">1st round</ComboBoxItem>
                            <ComboBoxItem>2nd round</ComboBoxItem>
                            <ComboBoxItem>3rd round</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel>
                        <Label Content="Select topic"/>
                        <ComboBox Text="Topic" SelectedIndex="{Binding CurrentTopicIndex}">
                            <ComboBoxItem IsSelected="True">1st topic</ComboBoxItem>
                            <ComboBoxItem>2nd topic</ComboBoxItem>
                            <ComboBoxItem>3rd topic</ComboBoxItem>
                            <ComboBoxItem>4th topic</ComboBoxItem>
                            <ComboBoxItem>5th topic</ComboBoxItem>
                            <ComboBoxItem>6th topic</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel>
                        <Label Content="Select Question" />
                        <ComboBox Text="Question" SelectedIndex="{Binding CurrentQuestionIndex}">
                            <ComboBoxItem IsSelected="True">1st question</ComboBoxItem>
                            <ComboBoxItem>2nd question</ComboBoxItem>
                            <ComboBoxItem>3rd question</ComboBoxItem>
                            <ComboBoxItem>4th question</ComboBoxItem>
                            <ComboBoxItem>5th question</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                </StackPanel>
                <GroupBox Header="current question">
                    <StackPanel>
                        <StackPanel>
                            <Label Content="current text"/>
                            <TextBlock Text="{Binding CurrentQuestion.QuestionText}" TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">

                            <StackPanel Margin="5">
                                <Label Content="orig answer"/>
                                <TextBlock Text="{Binding CurrentQuestion.QuestionAnswer}" TextWrapping="Wrap"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <Label Content="orig price"/>
                                <TextBlock Text="{Binding CurrentQuestion.Price}" TextWrapping="Wrap"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <Label Content="orig type"/>
                                <TextBlock Text="{Binding CurrentQuestion.QuestionType}" TextWrapping="Wrap"/>
                            </StackPanel>
                            <StackPanel Margin="5">
                                <Label Content="Speciality Type"/>
                                <TextBlock Text="{Binding CurrentQuestion.SpecialityType}" TextWrapping="Wrap"/>
                            </StackPanel>

                        </StackPanel>
                    </StackPanel>
                    
                </GroupBox>
            </StackPanel>



            <StackPanel Grid.Column="1">
                <GroupBox Header="New">
                    <StackPanel >
                        <StackPanel>
                            <Button Content="Get Cat" Command="{Binding GetRealQuestionsFromDbCommand}"
                            Width="150" />
                            <Label Content="new text"/>
                            <TextBox Text="{Binding NewQuestionText}" TextWrapping="Wrap" Height="50"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel>
                                <Label Content="new answer"/>
                                <TextBox Text="{Binding NewQuestionAnswer}" TextWrapping="Wrap"/>
                            </StackPanel>
                            <StackPanel Margin="5,0,5,0">
                                <Label Content="new Cat price"/>
                                <TextBox Text="{Binding NewQuestionSpecialityCatPrice}" TextWrapping="Wrap"/>
                            </StackPanel>
                            <StackPanel>
                                <Label Content="new type"/>
                                <ComboBox SelectedIndex="{Binding NewQuestionTypeIndex}">
                                    <ComboBoxItem IsSelected="True">Text</ComboBoxItem>
                                    <ComboBoxItem>Picture</ComboBoxItem>
                                    <ComboBoxItem>Picture series</ComboBoxItem>
                                    <ComboBoxItem>Music</ComboBoxItem>
                                    <ComboBoxItem>Video</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel>
                                <Label Content="new speciality type" />
                                <ComboBox SelectedIndex="{Binding NewQuestionSpecialityTypeIndex, UpdateSourceTrigger=PropertyChanged}">
                                    <ComboBoxItem IsSelected="True">simple question</ComboBoxItem>
                                    <ComboBoxItem>Cat</ComboBoxItem>
                                    <ComboBoxItem>Auction</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel>
                                <Label Content="Cat Topic Name"/>
                                <TextBox Text="{Binding NewCatTopicName}" TextWrapping="Wrap"/>
                            </StackPanel>
                            <StackPanel>
                                <Label Content="MediaLink"/>
                                <TextBox Text="{Binding NewQuestionMediaLink}" TextWrapping="Wrap"/>
                            </StackPanel>

                        </StackPanel>
                        <Button Content="Apply changes" Margin="10" Command="{Binding ApplyQuestionChangesCommand}"></Button>
                        

                    </StackPanel>
                </GroupBox>

            </StackPanel>

        </Grid>


        <StackPanel Grid.Row="2" Orientation="Horizontal">

        </StackPanel>
    </Grid>
</Window>
