<UserControl x:Class="SvoyaIgra.Game.Views.Questions.TextQuestion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SvoyaIgra.Game.Views.Questions"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:Background="White">
    <Viewbox>
        <TextBlock VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   Text="{Binding CurrentQuestion.QuestionText}" 
                   Foreground="{StaticResource QuestionsFontColor}"
                   TextWrapping="Wrap" MaxWidth="400" Margin="20" FontSize="20" TextAlignment="Center"/>
    </Viewbox>
</UserControl>
