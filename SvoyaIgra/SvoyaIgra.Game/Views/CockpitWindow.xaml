<Window x:Class="SvoyaIgra.Game.CockpitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SvoyaIgra.Game"
        xmlns:viewModels="clr-namespace:SvoyaIgra.Game.ViewModels"
        xmlns:helpers="clr-namespace:SvoyaIgra.Game.ViewModels.Helpers"
        mc:Ignorable="d"
        Title="CockpitWindow" 
        Height="500"         
        Width="500"
        WindowStyle="SingleBorderWindow">
    <Window.DataContext>
        <viewModels:CockpitWindowViewModel/>
    </Window.DataContext>


    <Window.Resources>
        <Style TargetType="Label" >
            
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" x:Name="ThisWindowPanelGrid">
            <Button Content="Close app" Command="{Binding CloseAppCommand}"
                    IsEnabled="{Binding PlayScreenRunning}"/>
        </Grid>
        <Grid Grid.Row="1" x:Name="PresentWindowControlGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" x:Name="WindowControlGrid">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Open" Command="{Binding OpenPresentScreenCommand}">
                        <Button.Resources>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PlayScreenRunning}" Value="True">
                                        <Setter Property="IsEnabled" Value="False" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding PlayScreenRunning}" Value="False">
                                        <Setter Property="IsEnabled" Value="True" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Resources>                        
                    </Button>
                    <Button Content="Close" 
                            Command="{Binding ClosePresentScreenCommand}"
                            IsEnabled="{Binding PlayScreenRunning}"/>
                    <CheckBox 
                        Command="{Binding MovePresentScreenCommand}"
                        IsChecked="{Binding PlayScreenLocked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        IsEnabled="{Binding PlayScreenRunning, UpdateSourceTrigger=PropertyChanged}">
                        <TextBlock Text="Lock playscreen" TextWrapping="Wrap"/>
                    </CheckBox>
                </StackPanel>
                
            </Grid>
            <Grid Grid.Column="1" x:Name="GamePhaseControlGrid">
                
            </Grid>
        </Grid>
        <Grid Grid.Row="2" x:Name="QuestionsControlGrid">

        </Grid>


    </Grid>
</Window>
